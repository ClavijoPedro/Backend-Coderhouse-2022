<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="../css/styles.css">
<h2 class="mb-5 titulo mt-5">Vista Productos</h2>
{{#if products.length}}
    <table class="table tabla table-striped bg-light rounded">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Foto</th>
        </tr>
      </thead>
      <tbody>
        {{#each products }}
            <tr>
                <td class="align-middle">{{this.name}}</td>
                <td class="align-middle">{{this.price}}</td>
                <td class="align-middle"><img class="tblImg" src="{{this.image}}" alt="prodImg"></td>
            </tr>
        {{/each}}      
      </tbody>
    </table>
    {{else}}
        <h5 class="mb-5 bg-light p-5 rounded">No hay productos</h5>
{{/if}}